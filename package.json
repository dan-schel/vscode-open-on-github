{
  "name": "open-on-github",
  "displayName": "Open On GitHub",
  "description": "Adds shortcuts to open the current file on GitHub",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "open-on-github.editor.permalink",
        "title": "Copy GitHub Permalink"
      },
      {
        "command": "open-on-github.editor.default",
        "title": "Open on GitHub"
      },
      {
        "command": "open-on-github.editor.master",
        "title": "Open on GitHub (on master/main)"
      },
      {
        "command": "open-on-github.explorer.permalink",
        "title": "Copy GitHub Permalink"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "open-on-github.editor.permalink",
          "group": "0_open_on_github"
        },
        {
          "command": "open-on-github.editor.default",
          "group": "0_open_on_github"
        },
        {
          "command": "open-on-github.editor.master",
          "group": "0_open_on_github"
        }
      ],
      "explorer/context": [
        {
          "command": "open-on-github.explorer.permalink",
          "group": "0_open_on_github"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
